{
  "name": "alfred-deepl",
  "description": "Translate English, German, French, Spanish, Italian, Dutch and Polish with deepL",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "author": {
    "name": "Alexander Heimbuch",
    "email": "github@heimbu.ch",
    "url": "https://alexander.heimbu.ch"
  },
  "dependencies": {
    "alfy": "^0.7.0",
    "clean-stack": "^1.3.0",
    "deepl-translator": "^1.2.0"
  },
  "bin": "bin.js",
  "devDependencies": {
    "npm-run-all": "^4.1.3",
    "pkg": "^4.3.1"
  },
  "scripts": {
    "bundle:clean": "rm -rf bundle && mkdir -p bundle",
    "bundle:bin": "pkg -t node8-macos-x64 -o bundle/alfred-deepl .",
    "bundle:copy": "cp -R icons 6556B1F6-C583-4AD7-AAE2-980C3A714872.png icon.png bundle",
    "bundle:plist": "sed 's|./node_modules/.bin/run-node index.js|./alfred-deepl|' info.plist > bundle/info.plist",
    "bundle:compress": "cd bundle && zip -r -X deepl-workflow.alfredworkflow .",
    "bundle": "npm-run-all bundle:clean bundle:bin bundle:copy bundle:plist bundle:compress",
    "postinstall": "alfy-init",
    "preuninstall": "alfy-cleanup"
  }
}
